function encryptFile(path, pin)
    if not path then
        return false, "No path"
    end
    if not pin then
        return false, "No pin"
    end
    if fs.exists(path) then
        -- Encrypt
        local beforeEncryption = fs.open(path, "r")
        local encryptedCode = StrUtils.encrypt(beforeEncryption.readAll(), pin)
        local encryptFile = fs.open(path, "w")
        encryptFile.write(encryptedCode)
        beforeEncryption.close()
        encryptFile.close()
        return true
    else
        return false, "No such file"
    end
end

function decryptFile(path, pin)
    if not path then
        return false, "No path"
    end
    if not pin then
        return false, "No pin"
    end
    if fs.exists(path) then
        -- Decrypt
        local afterEncryption = fs.open(path, "r")
        local decryptedCode = StrUtils.decrypt(afterEncryption.readAll(), pin)
        local decryptFile = fs.open(path, "w")
        decryptFile.write(decryptedCode)
        afterEncryption.close()
        decryptFile.close()
        return true
    else
        return false, "No such file"
    end
end