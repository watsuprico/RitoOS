function loadConfig(location)
if shell.run(location) == true then
return true
else
return false
end
end

function shutdown(s)
if s ~= nil then
	if s == "em" then
	print("Shuting down.... Please wait...")
	if UsingMonitor == true then
	term.clear()
	else
	end
	os.shutdown()
	elseif s == "normal" then
	os.shutdown()
	end
else
os.shutdown()
end
end

function draw(_Path)
if fs.exists(_Path) == true then
  local OldX, OldY = term.getCursorPos()
  bground = paintutils.loadImage(_Path)
    paintutils.drawImage(bground,1,1)
    term.setCursorPos(OldX, OldY)
else
end
end